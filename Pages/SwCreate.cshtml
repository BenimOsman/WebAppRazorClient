@page
@model WebAppRazorClient.Pages.SwCreateModel
@{
    ViewData["Title"] = "Create Sandwich";
}

<h1>Create Sandwich</h1>

<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="NewSandwitch.Name" class="form-label"></label>
        <input asp-for="NewSandwitch.Name" class="form-control" />
        <span asp-validation-for="NewSandwitch.Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="NewSandwitch.Price" class="form-label"></label>
        <input asp-for="NewSandwitch.Price" class="form-control" />
        <span asp-validation-for="NewSandwitch.Price" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-page="/SwList" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
