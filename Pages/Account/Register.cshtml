@page
@model WebAppRazorSandwitchClient.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h2 class="text-center mb-0">Register</h2> 

<div class="d-flex justify-content-center align-items-start" style="min-height: 100vh;">
    <!-- Align items to the top -->
    <div class="card" style="width: 100%; max-width: 400px;">
        <div class="card-body p-4">
            <!-- Reduced padding inside the card body -->
            <form method="post">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Input.Email" class="form-label"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Input.Password" class="form-label"></label>
                    <input asp-for="Input.Password" type="password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                    <input asp-for="Input.ConfirmPassword" type="password" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100">Register</button> 
            </form>

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger mt-3">@Model.ErrorMessage</div>
            }
        </div>
    </div>
</div>

<p class="text-center mt-3">
    Already have an account? <a asp-page="/Account/Login">Login here</a>
</p>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}